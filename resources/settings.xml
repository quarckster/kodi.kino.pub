<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="Общие">
        <setting id="video_quality" type="select" label="Качество видео" values="1080p|720p|480p" enable="eq(2,false)" default="1080p"/>
        <setting id="stream_type" type="select" label="Тип стриминга" values="http|hls|hls2|hls4" enable="eq(1,false)" default="hls"/>
        <setting id="ask_quality" type="bool" label="Задавать вопрос о качестве видео перед воспроизведением" default="false"/>
        <setting type="sep" />
        <setting id="ratings_source" type="select" label="Источник рейтингов" values="IMDB|Кинопоиск" default="IMDB"/>
        <setting type="sep" />
        <setting id="reset_auth" type="bool" label="Сбросить аутентификацию" default="false"/>
    </category>
    <category label="Элементы главного меню">
        <setting id="show_search" type="bool" label="Поиск" default="true"/>
        <setting id="show_last" type="bool" label="Последние" default="true"/>
        <setting id="show_popular" type="bool" label="Популярные" default="true"/>
        <setting id="show_hot" type="bool" label="Горячие" default="true"/>
        <setting id="show_tv" type="bool" label="ТВ" default="true"/>
        <setting id="show_collections" type="bool" label="Подборки" default="true"/>
        <setting id="show_movie" type="bool" label="Фильмы" default="true"/>
        <setting id="show_serial" type="bool" label="Сериалы" default="true"/>
        <setting id="show_tvshow" type="bool" label="ТВ шоу" default="true"/>
        <setting id="show_4k" type="bool" label="4К" default="true"/>
        <setting id="show_3d" type="bool" label="3D" default="true"/>
        <setting id="show_concert" type="bool" label="Концерты" default="true"/>
        <setting id="show_documovie" type="bool" label="Документальные фильмы" default="true"/>
        <setting id="show_docuserial" type="bool" label="Документальные сериалы" default="true"/>
    </category>
</settings>
